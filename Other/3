
#include <stdio.h>



int main() {
    
  int b;
  int a;
  scanf("%d", &b);
  for (int i = 0; i < 8; i++) {
      if(b & 0x80)
      {
          printf("%c", '1');
          a++;
      }
      else
      {
         printf("%c", '0'); 
      }
    
    b <<= 1;
  }
  printf("\nКоличество единиц- %d", a);
  return 0;
}
